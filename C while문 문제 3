#include <stdio.h>

int main()
{
	int num;				//더할 숫자 값
	int i = 0;				//초기값
	int result = 0;			//숫자를 모두 더할 값

	while (1)
	{
		printf("숫자를 입력: ");		//숫자값을 입력
		scanf_s("%d", &num);			
		if (num == 0)					//0을 입력시 프로그램 종료
			break;

		result += num;					//입력 받은 값들을 더함
	}
	printf("숫자의 총 합:%d ",result);	//결과값 산출
}
